<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>WeCN</title>
    <link href="/css/styles.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ============== scroll reveal cdn ================ -->
    <script src="https://unpkg.com/scrollreveal"></script>

    <!-- ============== box icon cdn  ===================== -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<script>

    function redirectToDiem(element) {
        var mssv = element.getAttribute('data-mssv');
        window.location.href = '/SinhVien/Diem?mssv=' + mssv;
    }
</script>

<body>

    <div class="home-section section flex " id="home">
        <!-- navigation menu  -->
        <div class="header-nav">

            <div class="header-list">
                <!-- mode change icon  -->
                <div class="mode-change-icon">
                    <i class="bx bx-moon" id="mode-change-icon"></i>
                </div>
                <!-- menu icon  -->
                <div class="menu-icon">
                    <i class='bx bx-grid-alt' id="menu-icon"></i>
                </div>
            </div>

            <!-- nav list  -->
            <ul class="header-nav-list nav flex" id="header-nav-list">
                <li>
                    <a href="#home" class="nav-link active">
                        TRANG CHỦ
                    </a>
                </li>
                <li>
                    <a href="#projects" class="nav-link">
                        TIN TỨC
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0);" class="nav-link" onclick="redirectToDiem(this)" data-mssv='@TempData["MaSV"]'>
                        ĐIỂM SỐ
                    </a>
                </li>
                <li>
                    <a href="#contact" class="nav-link">
                        TRA CỨU
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="Logout" class="nav-link">
                        Đăng Xuất
                    </a>
                </li>
            </ul>

        </div>

        <!-- hero section  -->
        <div class="hero flex">
            <div class="hero-img flex">
                <img src="~/img/logo.png" class="profile-pic" alt="">
                <span class="hero-img-bg"></span>
            </div>
            <!-- hero content  -->
            @if (TempData.ContainsKey("HoTenSV") && TempData.ContainsKey("MaSV") && TempData.ContainsKey("Lop"))
            {
                <div class="hero-content flex">
                    <h1 class="header">
                        Sinh Viên
                        <span>
                            @TempData["HoTenSV"]
                        </span>
                        HUIT
                    </h1>

                    <h2 class="sub-header">
                        @TempData["MaSV"]
                        <span>
                            @TempData["Lop"]
                        </span>
                    </h2>
                    <button class="btn hero-btn">
                        <a asp-controller="Home" asp-action="Info">THÔNG TIN SINH VIÊN</a>
                    </button>
                </div>
            }
        </div>

        <!-- social icon list  -->
        <div class="social-icon-list">
            <ul class="nav flex">
                <li class="social-icon">
                    <i class="bx bxl-facebook-circle"></i>
                </li>
                <li class="social-icon">
                    <i class="bx bxl-instagram-alt"></i>
                </li>
                <li class="social-icon">
                    <i class="bx bxl-twitter"></i>
                </li>
                <li class="social-icon">
                    <i class="bx bxl-youtube"></i>
                </li>
            </ul>
        </div>

        <div class="scroll-top-icon" id="scroll-up">
            <i class="bx bxs-chevron-up-circle" id="scroll-top-icon"></i>
        </div>
    </div>
    <!-- =============== custom js file  ============= -->
    <script src="~/css/script.js"> </script>

</body>
 @RenderBody()
<div class="footer-section section flex">
    <div class="footer-header">
        <h1>
            Aurora
        </h1>
    </div>

    <div class="footer-nav">
        <ul class="nav flex">
            <li class="social-icon">
                <i class="bx bxl-facebook-circle"></i>
            </li>
            <li class="social-icon">
                <i class="bx bxl-instagram-alt"></i>
            </li>
            <li class="social-icon">
                <i class="bx bxl-twitter"></i>
            </li>
            <li class="social-icon">
                <i class="bx bxl-youtube"></i>
            </li>
        </ul>
    </div>
</div>
</html>

