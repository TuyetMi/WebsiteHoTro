<style>
    table {
        border-collapse: collapse;
        border: 1px solid black;
        width: 100%;
    }

    th, td {
        border: 1px solid skyblue;
        padding: 10px;
    }

    th {
        background-color: lightblue;
    }

    /* CSS cho bảng giá */
    .pricing-table {
        width: 100%;
        margin-bottom: 20px;
    }

        .pricing-table .header {
            background-color: lightskyblue;
            padding: 10px;
            text-align: center;
        }

        .pricing-table .price {
            font-size: 20px;
            font-weight: bold;
        }

        .pricing-table .features {
            padding: 10px;
        }

        .pricing-table .button {
            background-color: #000;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
        }

    .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .col-md-3 {
        float: none;
    }

    form {
        float: none;
    }

    .col-md-3,
    form {
        width: 50%;
    }

    .col-md-3 {
        margin-left: 20px;
    }

    form {
        margin-right: 20px;
    }
    .form-group {
        margin-bottom: 15px; /* Adjust the spacing as needed */
    }

    .hero-img {
        float: right;
        margin-right: 80px;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border: 1px solid #007bff;
        border-radius: 5px;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #007bff;
            opacity: 0.7;
        }
</style>

<div class="container mt-5">
    <div class="col-md-3">
        <div class="hero-img flex">
            <img src="~/img/logo.png" class="profile-pic" alt="" style="width: 250px; height: 250px;">
            <span class="hero-img-bg"></span>
        </div>
    </div>
    <form asp-controller="QuanLy" asp-action="ThemChuongTrinhDaoTao" method="post">
        <h2>Chương trình đào tạo</h2>
        <div class="form-group">
            <label for="maCTDT">Mã CTDT:</label>
            <input type="text" class="form-control" id="maCTDT" name="maCTDT" placeholder="Nhập mã CTDT" required>
        </div>
        <div class="form-group">
            <label for="tenCTDT">Tên CTDT:</label>
            <input type="text" class="form-control" id="tenCTDT" name="tenCTDT" placeholder="Nhập tên CTDT" required>
        </div>
        <button type="submit" class="btn btn-primary">Thêm Chương Trình Đào Tạo</button>
    </form>
</div>
<h2 style="text-align:center">Danh sách Chương trình đào tạo</h2>
<table class="table">
    <thead>
        <tr>
            <th>Mã CTDT</th>
            <th>Tên CTDT</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chuongTrinhDaoTao in Model)
        {
            <tr>
                <td>@chuongTrinhDaoTao.MaCTDT</td>
                <td>@chuongTrinhDaoTao.TenCTDT</td>
                <td>
                    <form asp-controller="QuanLy" asp-action="SuaChuongTrinhDaoTao" method="post">
                        <input type="hidden" name="maCTDT" value="@chuongTrinhDaoTao.MaCTDT" />
                        <input type="text" class="form-control" id="tenCTDT" name="tenCTDT" placeholder="Nhập tên CTDT" required>
                        <button type="submit" class="btn btn-warning">Sửa</button>
                    </form>
                    <a href="@Url.Action("XoaChuongTrinhDaoTao", "QuanLy", new { maCTDT = chuongTrinhDaoTao.MaCTDT })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
