<style>
    table {
        border-collapse: collapse;
        border: 1px solid black;
        width: 100%;
    }

    th, td {
        border: 1px solid skyblue;
        padding: 10px;
    }

    th {
        background-color: lightblue;
    }

    .pricing-table {
        width: 100%;
        margin-bottom: 20px;
    }

        .pricing-table .header {
            background-color: lightskyblue;
            padding: 10px;
            text-align: center;
        }

        .pricing-table .price {
            font-size: 20px;
            font-weight: bold;
        }

        .pricing-table .features {
            padding: 10px;
        }

        .pricing-table .button {
            background-color: #000;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
        }

    .container {
        text-align: center;
    }

    form {
        width: 50%;
        margin: auto;
    }

    .form-group {
        margin-bottom: 15px; /* Adjust the spacing as needed */
    }

    .profile-pic {
        border-radius: 50%; /* làm tròn hình ảnh */
    }

    .table td,
    .table th {
        text-align: center;
        vertical-align: middle;
    }

    .row {
        display: flex;
    }

    .col-md-1 {
        flex: 1;
    }

    .col-md-3 {
        flex: 3;
    }

    .col-md-4 {
        flex: 4;
    }

    .col-md-3 {
        flex: 3;
    }

    .col-md-1 {
        flex: 1;
    }
    .hero-img {
        float: right;
        margin-left: 200px;
    }

    .hero-img {
        float: right;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border: 1px solid #007bff;
        border-radius: 5px;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #007bff;
            opacity: 0.7;
        }

</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-3">
            <div class="hero-img flex">
                <img src="~/img/logo.png" class="profile-pic" alt="" style="width: 250px; height: 250px;">
                <span class="hero-img-bg"></span>
            </div>
        </div>
        <div class="col-md-4">
            <form asp-controller="QuanLy" asp-action="ThemMonHoc" method="post">
                <h2>Môn Học</h2>
                <div class="form-group">
                    <label for="maMon">Mã Môn:</label>
                    <input type="text" class="form-control" id="maMon" name="maMon" placeholder="Nhập mã môn" required>
                </div>
                <div class="form-group">
                    <label for="maCTDT">Mã CTDT:</label>
                    <input type="text" class="form-control" id="maCTDT" name="maCTDT" placeholder="Nhập mã CTDT" required>
                </div>
                <div class="form-group">
                    <label for="tenMon">Tên Môn:</label>
                    <input type="text" class="form-control" id="tenMon" name="tenMon" placeholder="Nhập tên môn" required>
                </div>
                <button type="submit" class="btn btn-primary">Thêm Môn Học</button>
            </form>
        </div>
        <div class="col-md-3">
            <form asp-controller="QuanLy" asp-action="TimKiemMonHoc" method="post">
                <h2>Tìm Kiếm Môn Học</h2>
                <div class="form-group">
                    <label for="searchMaCTDT">Mã CTDT:</label>
                    <input type="text" class="form-control" id="searchMaCTDT" name="maCTDT" placeholder="Nhập mã CTDT" required>
                </div>
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
    <h2 style="text-align: center;">Danh Sách Môn Học</h2>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Mã Môn</th>
                    <th>Mã CTDT</th>
                    <th>Tên Môn</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var monHoc in Model)
                {
                    <tr>
                        <td>@monHoc.MaMon</td>
                        <td>@monHoc.MaCTDT</td>
                        <td>@monHoc.TenMon</td>
                        <td>
                            <form asp-controller="QuanLy" asp-action="SuaMonHoc" method="post">
                                <!-- Nội dung form sửa ở đây -->
                            </form>
                            <a href="@Url.Action("XoaMonHoc", "QuanLy", new { maMon = monHoc.MaMon})" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>