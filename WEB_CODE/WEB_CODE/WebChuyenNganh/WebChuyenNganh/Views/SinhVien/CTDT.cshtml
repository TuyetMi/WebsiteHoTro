
@{
    ViewData["Title"] = "CTDT";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="container mt-5">
    <form asp-controller="SinhVien" asp-action="ThemChuongTrinhDaoTao" method="post">
        <h2>Chương trình đào tạo</h2>
        <div class="form-group">
            <label for="maCTDT">Mã CTDT:</label>
            <input type="text" class="form-control" id="maCTDT" name="maCTDT" placeholder="Nhập mã CTDT" required>
        </div>
        <div class="form-group">
            <label for="tenCTDT">Tên CTDT:</label>
            <input type="text" class="form-control" id="tenCTDT" name="tenCTDT" placeholder="Nhập tên CTDT" required>
        </div>
        <button type="submit" class="btn btn-primary">Thêm Chương Trình Đào Tạo</button>
    </form>
</div>
<h2>Danh sách Chương trình đào tạo</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã CTDT</th>
            <th>Tên CTDT</th>
            <!-- Thêm các cột khác nếu cần -->
        </tr>
    </thead>
    <tbody>
        @foreach (var chuongTrinhDaoTao in Model)
        {
            <tr>
                <td>@chuongTrinhDaoTao.MaCTDT</td>
                <td>@chuongTrinhDaoTao.TenCTDT</td>
                <!-- Thêm các ô khác nếu cần -->
            </tr>
        }
    </tbody>
</table>
</div>

<!-- Form thêm/sửa/xóa Môn học -->
<form class="mt-4">
    <h2>Môn học</h2>
    <div class="form-group">
        <label for="maMon">Mã môn:</label>
        <input type="text" class="form-control" id="maMon" placeholder="Nhập mã môn">
    </div>
    <div class="form-group">
        <label for="maCTDTMon">Mã CTDT:</label>
        <input type="text" class="form-control" id="maCTDTMon" placeholder="Nhập mã CTDT">
    </div>
    <div class="form-group">
        <label for="tenMon">Tên môn:</label>
        <input type="text" class="form-control" id="tenMon" placeholder="Nhập tên môn">
    </div>
    <button type="submit" class="btn btn-primary">Lưu thông tin môn học</button>
    <button type="button" class="btn btn-warning ml-2" onclick="editMonHoc()">Sửa</button>
    <button type="button" class="btn btn-danger ml-2" onclick="deleteMonHoc()">Xóa</button>
</form>
</div>