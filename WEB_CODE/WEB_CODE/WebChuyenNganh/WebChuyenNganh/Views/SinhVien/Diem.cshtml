@model List<WebChuyenNganh.Models.Diem>
<head>
  <meta charset="UTF-8">
  <title>Tables & Pricing Tables</title>
   
  <style>
        .hero .hero-img {
            height: 50%;
            width: auto;
            position: relative;
            padding-bottom: 40px;
        }

        .hero-img img {
            width: 70%;
            z-index: 2;
        }

        .hero-img-bg {
            content: "";
            position: absolute;
            height: 300px;
            width: 300px;
            background-color: white;
            border-radius: 50%;
            box-shadow: var(--hero-img-shadow);
        }

        .hero-content {
            height: 35vh;
            width: 100%;
            padding: 20px 0;
            flex-direction: column;
            text-align: center;
            color: var(--main-txt-color);
            overflow: hidden;
        }

        .hero .hero-img {
            height: 300px;
        }

        .flex {
            display: flex;
            align-items: center;
            justify-content: space-around;
        }

            .hero-content .header {
                font-size: var(--fs-large);
            }

            .hero-content span {
                color: var(--primary-color);
            }
    /* CSS cho bảng */
    table {
      border-collapse: collapse;
      border: 1px solid black;
      width: 100%;
    }
    th, td {
            border: 1px solid skyblue;
      padding: 10px;
    }
    th {
            background-color: lightblue;
    }

    /* CSS cho bảng giá */
    .pricing-table {
      width: 100%;
      margin-bottom: 20px;
    }
    .pricing-table .header {
                background-color: lightskyblue;
      padding: 10px;
      text-align: center;
    }
    .pricing-table .price {
      font-size: 20px;
      font-weight: bold;
    }
    .pricing-table .features {
      padding: 10px;
    }
    .pricing-table .button {
      background-color: #000;
      color: #fff;
      padding: 10px 20px;
      border-radius: 5px;
    }
  </style>
</head>
<div class="hero flex">
    <div class="hero-img flex">
        <img src="~/img/pngwing.com.png" class="profile-pic" alt="">
        <span class="hero-img-bg"></span>
    </div>
    <!-- hero content  -->
    @if (TempData.ContainsKey("HoTenSV") && TempData.ContainsKey("MaSV") && TempData.ContainsKey("Lop"))
    {
        <div class="hero-content flex">
            <h2> 
                Mã Số Sinh Viên:
                <span style="color:darkturquoise">
                    @TempData["MaSV"]
                </span>
            </h2>
            <h2>
                Họ và Tên:
                <span style ="color:darkturquoise">
                    @TempData["HoTenSV"]
                </span>
            </h2>
            <h2>
                Lớp:
                <span style="color:darkturquoise">
                    @TempData["Lop"]
                </span>
            </h2>
            <h2>
                Chương Trình Dào Tạo:
                <span style="color:darkturquoise">
                    @TempData["MaCTDT"]
                </span>
            </h2>
        </div>
    }
</div>
<body>
    <table>
        <h2 style="text-align:center">Thông tin điểm sinh viên</h2>

        <div>
            @if (Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Tên Môn</th>
                            <th>Điểm</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var diem in Model)
                        {
                            <tr>
                                <td>@diem.MaMon</td>
                                <td>@diem.DIEM</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Không có thông tin điểm cho sinh viên này.</p>
            }
        </div>
    </table>

    <!-- Add a button to trigger TempData transfer -->
    <form method="get" action="@Url.Action("Index", "Home")">
        <input type="hidden" name="HoTenSV" value="@TempData["HoTenSV"]" />
        <input type="hidden" name="MaSV" value="@TempData["MaSV"]" />
        <input type="hidden" name="Lop" value="@TempData["Lop"]" />
        <!-- Các trường dữ liệu khác -->
        <button type="submit" class="button">Trang Chủ</button>
    </form>
</body>